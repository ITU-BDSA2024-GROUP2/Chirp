@page "/register"
@model Chirp.Web.Pages.LoginModel

@{
    ViewData["Title"] = "Register!";
    Layout = "Shared/_Layout";
    <link href="/css/LR.css" rel="stylesheet" type="text/css" />
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label>Email</label>
                <input class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label>Password</label>
                <input class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label>Confirm Password</label>
                <input class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <span class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    
                }
            }
        </section>
    </div>
</div>


