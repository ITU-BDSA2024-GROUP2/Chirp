@model Chirp.Web.Pages.SubmitMessageModel

@if (User.Identity.IsAuthenticated)
{
    <div class="cheepbox">
        <h3>What's on your mind @(User.Identity.Name)?</h3>
        <form method="post">
            <input style="float: left" type="text" asp-for="Message">
            <input type="submit" value="Share">
        </form>
    </div>
}